<div class="posts-content">
	<p id="notice"><%= notice %></p>

	<h2 class="post_title"><%= @post.title %></h2>
	 
	<%= markdown(@post.content) %>
</div>

<p>
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>

<% if is_authrized %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
<% end %>